                        <span class="nc">JLabel</span><span class="o">.</span><span class="na">CENTER</span><span class="o">)).</span><span class="na">setFont</span><span class="o">(</span><span class="k">new</span> <span class="nc">Font</span><span class="o">(</span><span class="s">"san-serif"</span><span class="o">,</span>
                        <span class="nc">Font</span><span class="o">.</span><span class="na">PLAIN</span><span class="o">,</span> <span class="mi">23</span><span class="o">));</span>
