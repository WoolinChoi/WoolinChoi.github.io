        <span class="o">}</span> <span class="k">else</span> <span class="k">if</span> <span class="o">(</span><span class="n">smenu</span> <span class="o">==</span> <span class="n">bmenu</span><span class="o">[</span><span class="mi">1</span><span class="o">])</span> <span class="o">{</span>
