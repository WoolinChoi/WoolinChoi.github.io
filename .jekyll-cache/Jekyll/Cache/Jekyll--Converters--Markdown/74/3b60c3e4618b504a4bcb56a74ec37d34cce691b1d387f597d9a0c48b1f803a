            <span class="o">}</span>
        <span class="o">}</span>
    <span class="o">}</span>
    
    <span class="kt">void</span> <span class="nf">eventProc</span><span class="o">()</span> <span class="o">{</span>
        <span class="nc">BtnHdlr</span> <span class="n">bh</span> <span class="o">=</span> <span class="k">new</span> <span class="nc">BtnHdlr</span><span class="o">();</span>
        <span class="c1">// 카테고리(햄버거, 치킨, 디저트, 드링크) 선택 버튼 ActionListener 연결</span>
        <span class="k">for</span> <span class="o">(</span><span class="kt">int</span> <span class="n">i</span> <span class="o">=</span> <span class="mi">0</span><span class="o">;</span> <span class="n">i</span> <span class="o">&lt;</span> <span class="n">menu</span><span class="o">.</span><span class="na">length</span><span class="o">;</span> <span class="n">i</span><span class="o">++)</span> <span class="o">{</span>
            <span class="n">bmenu</span><span class="o">[</span><span class="n">i</span><span class="o">].</span><span class="na">addActionListener</span><span class="o">(</span><span class="n">bh</span><span class="o">);</span>
        <span class="o">}</span>
        <span class="c1">// 햄버거 카테고리의 각각의 상품 선택하는 버튼 ActionListener 연결</span>
